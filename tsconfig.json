{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitThis": true
  },
  "include": ["next-env.d.ts", "svg.d.ts", "**/*.ts", "**/*.tsx", "components/login/index.js", "pages/login/index.tsx", "pages/api/api.ts"],
  "exclude": ["node_modules"]
}
